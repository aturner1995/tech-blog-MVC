<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{username}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Blog:</h3>

    <form class="form new-blog-form">
      <div class="form-group py-2">
        <label for="blog-title" class="col-sm-2 col-form-label">Title:</label>
        <div class="col-sm-10">
          <input class="form-control" type="text" id="blog-title" name="blog-title" />
        </div>
      </div>
      <div class="form-group py-2">
        <label for="blog-body" class="col-sm-2 col-form-label">Body:</label>
        <div class="col-sm-10">
          <textarea class="form-control" id="blog-body" name="blog-body"></textarea>
        </div>
      </div>
      <div class="form-group d-flex">
        <button type="submit" class="btn btn-primary my-3">Create Blog</button>
      </div>
    </form>
  </div>

  <div class="col-md-6 blog-list">
    <h3>My Blogs:</h3>

    {{#each blogs as |blog|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/blog/{{blog.id}}">{{blog.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{blog.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
</div>

<script src="/js/profile.js"></script>
