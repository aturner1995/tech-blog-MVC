<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h2>{{title}}</h2>
          <p>{{description}}</p>
          <p class="text-muted">Created by {{user.username}} on {{format_date date_created}}</p>
        </div>
        <div class="card-body">
          {{#if logged_in}}
          <form class="new-comment-form formCont mb-4" data-blogid={{id}}>
            <div class="form-row align-items-center">
              <div class="col">
                <input id='comment-description' type="text" class="form-control" placeholder="Add a comment...">
              </div>
              <div class="col-auto text-center py-2">
                <button class="btn btn-primary" type="submit">Add Comment</button>
              </div>
            </div>
          </form>
          {{/if}}
          <h2>Comments</h2>
          {{#each comments as |comment|}}
          <div class="commentCont mb-3">
            <p class="mb-0">{{comment.comment_description}}</p>
            <p class="text-muted mb-0">Created by {{comment.user.username}} on {{format_date date_created}}</p>
          </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/js/comments.js"></script>
